<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Sensor Icon -->
            <ImageView
                android:id="@+id/imageViewSensorIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="12dp"
                android:contentDescription="@string/sensor_icon"
                tools:src="@android:drawable/ic_menu_compass" />

            <!-- Sensor Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewSensorName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:textStyle="bold"
                    tools:text="LSM6DSOTR Accelerometer" />

                <TextView
                    android:id="@+id/textViewSensorType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:textColor="?android:attr/textColorSecondary"
                    tools:text="android.sensor.accelerometer" />

            </LinearLayout>

            <!-- Status Icon and Text -->
            <TextView
                android:id="@+id/textViewTestStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_check_circle"
                tools:text="PASS" />

        </LinearLayout>

        <!-- Test Duration -->
        <TextView
            android:id="@+id/textViewTestDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:textColor="?android:attr/textColorSecondary"
            tools:text="Test Duration: 2.5s" />

        <!-- Success Details (shown when test passes) -->
        <LinearLayout
            android:id="@+id/layoutSuccessDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/textViewSampleData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textColor="?android:attr/textColorSecondary"
                tools:text="Data: 0.12, -9.81, 0.05" />

            <TextView
                android:id="@+id/textViewAccuracy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textColor="?android:attr/textColorSecondary"
                tools:text="Accuracy: High" />

        </LinearLayout>

        <!-- Error Details (shown when test fails) -->
        <LinearLayout
            android:id="@+id/layoutErrorDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/error_details"
                android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                android:textColor="@android:color/holo_red_dark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewErrorMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@color/error_background"
                android:padding="8dp"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textColor="@android:color/holo_red_dark"
                tools:text="Failed to register sensor listener" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>