<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:rippleColor="?attr/colorPrimary"
    app:strokeColor="?attr/colorOutlineVariant"
    app:strokeWidth="1dp">

    <!-- Main Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Header Section: Icon + Text Info + Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Sensor Icon Container -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSensorIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="12dp"
                app:cardBackgroundColor="?attr/colorPrimaryContainer"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp">

                <ImageView
                    android:id="@+id/imageViewSensorIcon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/compass_icon"
                    android:scaleType="centerInside"
                    app:tint="?attr/colorOnPrimaryContainer"
                    tools:src="@android:drawable/ic_menu_compass" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Text Information Section -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Sensor Name -->
                <TextView
                    android:id="@+id/textViewSensorName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:textColor="?attr/colorOnSurface"
                    android:textStyle="bold"
                    tools:text="Accelerometer" />

                <!-- Sensor Type -->
                <TextView
                    android:id="@+id/textViewSensorType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    tools:text="Motion Sensor" />

                <!-- Sensor Vendor -->
                <TextView
                    android:id="@+id/textViewSensorVendor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    tools:text="Google Inc." />

            </LinearLayout>

            <!-- Status Chip -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chipStatus"
                style="@style/Widget.Material3.Chip.Assist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/active"
                android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                android:textStyle="bold"
                app:chipBackgroundColor="?attr/colorSecondaryContainer"
                app:chipMinHeight="28dp"
                app:chipStrokeWidth="0dp"
                tools:text="ACTIVE" />

        </LinearLayout>

        <!-- Value Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <!-- Spacer to align with text content -->
            <View
                android:layout_width="36dp"
                android:layout_height="1dp" />

            <!-- Current Value Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardCurrentValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardBackgroundColor="?attr/colorSurfaceContainerHighest"
                app:cardCornerRadius="8dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_marginEnd="6dp"
                        android:src="@android:drawable/ic_menu_view"
                        app:tint="?attr/colorPrimary" />

                    <TextView
                        android:id="@+id/textViewCurrentValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:fontFamily="monospace"
                        android:maxLines="1"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="?attr/colorOnSurface"
                        android:textStyle="bold"
                        tools:text="X: 0.12, Y: -9.81, Z: 0.05" />

                    <!-- Test Progress Indicator (hidden by default) -->
                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:id="@+id/progressIndicatorTest"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:visibility="gone"
                        app:indicatorColor="?attr/colorPrimary"
                        app:indicatorSize="20dp"
                        app:trackColor="?attr/colorSurfaceVariant"
                        tools:visibility="visible" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>