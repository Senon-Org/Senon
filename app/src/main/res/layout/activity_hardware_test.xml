<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HardwareTestActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Location Testing Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardViewLocationSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginEnd="12dp"
                            android:contentDescription="@string/location_icon"
                            android:src="@android:drawable/ic_menu_mylocation" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/location_gps"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textViewLocationStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                            android:textStyle="bold"
                            tools:text="Available" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:text="@string/status"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />

                        <TextView
                            android:id="@+id/textViewLocationTestStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ready"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonStartLocationTest"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:text="@string/start_test"
                            app:icon="@android:drawable/ic_media_play" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonStopLocationTest"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/stop_test"
                            app:icon="@android:drawable/ic_media_pause" />

                    </LinearLayout>

                    <!-- Location Data Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardViewLocationData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:visibility="gone"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp"
                        tools:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/location_data"
                                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textViewLocationData"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:fontFamily="monospace"
                                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                                tools:text="Lat: 37.422160\nLon: -122.084270\nAccuracy: 5.0m\nProvider: gps" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/textViewLocationStartTime"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                                    tools:text="Started: 14:30:25" />

                                <TextView
                                    android:id="@+id/textViewLocationDuration"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                                    tools:text="Duration: 5.2s" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/textViewLocationUpdates"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                                tools:text="Updates: 12" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Camera Testing Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardViewCameraSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginEnd="12dp"
                            android:contentDescription="@string/camera_icon"
                            android:src="@android:drawable/ic_menu_camera" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/camera"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textViewCameraStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                            android:textStyle="bold"
                            tools:text="2 Cameras Available" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:text="@string/status"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />

                        <TextView
                            android:id="@+id/textViewCameraTestStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ready"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonStartCameraTest"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:text="@string/start_test"
                            app:icon="@android:drawable/ic_media_play" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonStopCameraTest"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/stop_test"
                            app:icon="@android:drawable/ic_media_pause" />

                    </LinearLayout>

                    <!-- Camera Data Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardViewCameraData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:visibility="gone"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp"
                        tools:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/camera_information"
                                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textViewCameraInfo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:fontFamily="monospace"
                                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                                tools:text="Camera 0: Back\nCamera 1: Front" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/textViewCameraStartTime"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                                    tools:text="Started: 14:30:25" />

                                <TextView
                                    android:id="@+id/textViewCameraDuration"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                                    tools:text="Duration: 2.1s" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/textViewCameraCount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                                tools:text="Cameras: 2" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Microphone Testing Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardViewMicrophoneSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginEnd="12dp"
                            android:contentDescription="@string/microphone_icon"
                            android:src="@android:drawable/ic_btn_speak_now" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/microphone"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textViewMicStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                            android:textStyle="bold"
                            tools:text="Available" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:text="@string/status"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />

                        <TextView
                            android:id="@+id/textViewMicTestStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ready"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonStartMicTest"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:text="@string/start_test"
                            app:icon="@android:drawable/ic_media_play" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonStopMicTest"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/stop_test"
                            app:icon="@android:drawable/ic_media_pause" />

                    </LinearLayout>

                    <!-- Microphone Data Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardViewMicData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:visibility="gone"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp"
                        tools:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/audio_level"
                                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textViewMicLevel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:fontFamily="monospace"
                                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                                android:textStyle="bold"
                                tools:text="Level: -45.2 dB" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/textViewMicStartTime"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                                    tools:text="Started: 14:30:25" />

                                <TextView
                                    android:id="@+id/textViewMicDuration"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                                    tools:text="Duration: 8.7s" />

                            </LinearLayout>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>